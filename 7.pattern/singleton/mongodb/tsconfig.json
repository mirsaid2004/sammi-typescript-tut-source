{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": true, // Ensures all properties are initialized in the constructor
    "forceConsistentCasingInFileNames": true
  }
}
